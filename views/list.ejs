<%- include("header") %>

    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>

    <div class="box">
        <ul>
            <%  newItems.forEach((item) => { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= item.name %></p>
                </div>
            <%  }); %>
        </ul>

        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= title %>>+</button>
        </form>
    </div>

<%- include("footer") %>